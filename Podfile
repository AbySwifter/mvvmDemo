# Uncomment the next line to define a global platform for your project
source 'https://gitee.com/momo96553/DTSepc.git' #私有远程库
source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!
platform :ios, '9.0'

target 'RxTripshow' do
  # Pods for RXTripshow
  # RxSwfit
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxDataSources'
  # Json
   pod 'HandyJSON', '~> 4.2.0-beta1'
  # Snapkit 布局
  pod 'SnapKit'
  # Kingfisher
  pod 'Kingfisher'
  pod 'Toast-Swift'
  #oc库
  pod 'MJRefresh'
  # Moya
  pod 'Moya/RxSwift', '~> 11.0.2'
  # 播放器
  pod 'BMPlayer'

 target 'RxTripshowTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'RxBlocking', '~> 4.2.0'
    pod 'RxTest',     '~> 4.2.0'
  end

  target 'RxTripshowUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
